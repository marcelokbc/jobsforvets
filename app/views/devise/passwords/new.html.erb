<div class="bg-gray-100 flex justify-center items-center h-screen">
    <!-- Left: Image -->
  <div class="w-1/2 h-screen hidden lg:block">
    <img src="https://images.unsplash.com/photo-1601758063890-1167f394febb?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fGNhZXMlMjBlc3F1ZWNpZG9zfGVufDB8fDB8fHww" alt="" class="object-cover h-full w-full">
  </div>
<!-- Right: Login Form -->
  <div class="lg:p-36 md:p-52 sm:20 p-8 w-full lg:w-1/2">
    <h1 class="text-2xl font-semibold mb-4 text-center">Esqueceu sua senha?</h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="mb-4">
      <%= f.input :email, 
                  required: true, 
                  class: "w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" 
      %>
    </div>
    <%= f.button :submit, "Enviar as instruções", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md py-2 px-4 w-full cursor-pointer" %>
    <div class="mt-6 text-blue-500 text-center">
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
</div>
