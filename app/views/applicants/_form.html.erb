<section class="py-8 bg-[#f5f5f5]">
  <div class="container px-10 mx-auto flex justify-center">
    <div class="pb-16 pt-12 border border-dark-blue rounded-3xl w-3/5">
      <p class="text-3xl font-heading font-sourcesans font-medium text-center">
        Candidatar-se a vaga
      </p>
      <div class="flex flex-wrap px-9 mb-8 md:mb-0">
        <div class="mt-5 md:col-span-2 md:mt-0 w-full">
        <%= simple_form_for @applicant, remote: true do |f| %>
          <%= f.error_notification %>
            <div class="overflow-hidden">
              <div class="px-4 py-5 sm:p-6">
                <div class="grid grid-cols-6 gap-6">
                  <%= f.hidden_field :position_id, value: @position.id %>
                  <div class="col-span-6">
                    <%= f.input :name,
                                placeholder: "Nome Completo",
                                class: "block shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                    %>
                  </div>
                  <div class="col-span-6">
                    <%= f.input :email,
                                input_html: { value: current_user.email },
                                placeholder: "E-mail",
                                class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                    %>
                  </div>
                  <div class="col-span-6">
                    <%= f.input :phone,
                                placeholder: "Telefone",
                                class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                    %>
                  </div>
                  <div class="col-span-6">
                    <%= f.submit "Candidatar-se a vaga", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 w-full rounded" %> 
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>