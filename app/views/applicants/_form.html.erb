<section class="py-8 bg-[#f5f5f5]">
  <div class="container px-10 mx-auto flex justify-center">
    <div class="pb-16 pt-12 border border-dark-blue rounded-3xl w-10/12">
      <p class="text-3xl font-heading font-sourcesans font-medium pl-16 mb-4">
        Candidatar-se a vaga
      </p>
      <div class="flex flex-wrap px-9 mb-8 md:mb-0">
        <div class="mt-5 md:col-span-2 md:mt-0 w-full" data-controller="mask">
          <%= simple_form_for @applicant, remote: true do |f| %>
            <%= f.error_notification %>
              <div class="overflow-hidden">
                <div class="px-4 py-5 sm:p-6">
                  <div class="grid grid-cols-6 gap-6">
                    <%= f.hidden_field :position_id, value: @position.id %>
                    <div class="col-span-6 sm:col-span-3">
                      <%= f.input :first_name,
                                  placeholder: "Primeiro Nome",
                                  class: "block shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                      <%= f.input :last_name,
                                  placeholder: "Sobrenome",
                                  class: "block shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                      <%= f.input :social_name,
                                  placeholder: "Nome Social",
                                  class: "block shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                      <%= f.input :phone,
                                  placeholder: "Telefone",
                                  class: "shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-6">
                      <%= f.input :linkedin,
                                  placeholder: "Linkedin",
                                  class: "shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                      <%= f.input :cpf,
                                  placeholder: "CPF",
                                  class: "shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-4">
                      <%= f.input :email,
                                  input_html: { value: current_user.email },
                                  placeholder: "E-mail",
                                  class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                      <%= f.input :zipcode,
                                  placeholder: "CEP",
                                  class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-4">
                      <%= f.input :street,
                            placeholder: "Rua",
                            class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                      <%= f.input :number,
                            placeholder: "NÃºmero",
                            class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                      <%= f.input :complement,
                            placeholder: "Complemento",
                            class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                      <%= f.input :state,
                            placeholder: "Estado",
                            class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                      <%= f.input :neighborhood,
                            placeholder: "Bairro",
                            class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                      <%= f.input :city,
                            placeholder: "Cidade",
                            class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional"
                      %>
                    </div>
                    <div class="col-span-6">
                      <%= f.input :resume,
                                  as: :file,
                                  hint: "Aceitamos somente arquivos PDF",
                                  placeholder: "CurrÃ­culo",
                                  class: "w-100 shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 bg-white focus:outline-none focus:ring-0 focus:border-blue-500 text-gray-400 leading-6 transition-colors duration-200 ease-in-out string optional" 
                      %>
                    </div>
                    <div class="col-span-6 sm:col-span-3 flex justify-between items-center gap-5">
                      <%= f.submit "Candidatar-se a vaga", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-12 w-full rounded" %> 
                      <%= link_to "Voltar" , root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-12 w-full rounded" %>
                    </div>
                    
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>